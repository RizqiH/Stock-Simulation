# Production Environment Configuration
# IMPORTANT: Change all default values before deploying to production!

# Server Configuration
PORT=8080
API_PORT=8080
GIN_MODE=release
LOG_LEVEL=info

# Database Configuration
# SECURITY: Use strong passwords in production!
MYSQL_ROOT_PASSWORD=CHANGE_THIS_STRONG_ROOT_PASSWORD
MYSQL_DATABASE=stock_simulation
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_PORT=3306
DATABASE_URL=mysql://root:root@mysql:3306/stock_simulation?parseTime=true

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# JWT Configuration
# SECURITY: Generate a strong random secret key!
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARACTERS

# External APIs
# STOCK_API_KEY=your_production_stock_api_key
# STOCK_API_URL=https://api.stockprovider.com

# Email Configuration
# SMTP_HOST=smtp.your-domain.com
# SMTP_PORT=587
# SMTP_USER=noreply@your-domain.com
# SMTP_PASSWORD=your_smtp_password

# File Upload Configuration
MAX_UPLOAD_SIZE=5MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=1m

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_newrelic_key